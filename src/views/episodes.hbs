{{> navigation}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center my-3">
                <div class="card-body">
                    <h3>Episodes</b></h3>
                </div>
            </div>  
        </div>
    </div>
    <div class="row">
        {{#if error}}
            <p>Error: {{error}}</p>
        {{/if}}

        <div class="accordion" id="accordionExample">
        {{#each episodes}}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target={{getIdStringWithDial episode}}  aria-expanded="true" aria-controls={{getIdString episode}} >
                        Name of the episode: {{name}}
                    </button>
                </h2>
                <div id={{getIdString episode}} class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div>
                            Air date: <strong>{{air_date}}</strong></br>
                            ID episode: {{episode}}</br>
                            Number of characters that appear in the episode: {{characters.length}}</br>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
      </div>
</div>