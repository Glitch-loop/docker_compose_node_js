{{> navigation}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center my-3">
                <div class="card-body">
                    <h3>Locations</b></h3>
                </div>
            </div>  
        </div>
    </div>
    <div class="row">
        {{#if error}}
            <p>Error: {{error}}</p>
        {{/if}}

        <div id="carouselExampleDark" class="carousel carousel-dark slide">
        <div class="carousel-indicators">
        {{#each locations}}
            {{#if (isTheFirst id)}}
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to={{intToString id}} class="active" aria-current="true" aria-label={{getIdSlide id}}></button>
            {{else}}
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to={{intToString id}} aria-label={{getIdSlide id}}></button>
            {{/if}}
        {{/each}}
        </div>
        <div class="carousel-inner">
            {{#each locations}}
                {{#if (isTheFirst id)}}
                    <div class="carousel-item active" data-bs-interval="2000">
                        <img src="https://img2.wallspic.com/crops/1/4/8/7/3/137841/137841-arte-animacion-artes_visuales-ilustracion-caricatura-3840x2160.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block" style="color: white">
                            <h5>{{name}}</h5>
                            <p>Type: {{type}} - Dimension: {{dimension}} - Population: {{residents.length}}</p>
                        </div>
                    </div>

                {{else}}
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="https://img2.wallspic.com/crops/1/4/8/7/3/137841/137841-arte-animacion-artes_visuales-ilustracion-caricatura-3840x2160.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block" style="color: white">
                            <h5>{{name}}</h5>
                            <p>Type: {{type}} - Dimension: {{dimension}} - Population: {{residents.length}}</p>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>
    </div>
</div>